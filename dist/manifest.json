{
    "manifest_version": 3,
    "name": "Gecko Store Tools",
    "version": "1.0",
    "description": "Gecko Store, your one-stop platform for cutting-edge solutions designed to elevate your workflow and creativity to the next level.",
    "homepage_url": "https://geckostore.my.id",
    "permissions": [
        "activeTab",
        "cookies",
        "contextMenus",
        "declarativeContent",
        "management",
        "storage",
        "tabs",
        "proxy",
        "webRequest",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "incognito": "split"
}